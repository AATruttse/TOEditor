// Shared color theme for the entire application.
// All components should use these colors for consistent theming.

export global AppTheme {
    in-out property <string> mode: "light"; // "light" or "dark"

    // Backgrounds
    out property <color> bg-main: mode == "dark" ? #34495e : #f5f5f5;
    out property <color> bg-toolbar: mode == "dark" ? #3d566e : #e8e8e8;
    out property <color> bg-sidebar: mode == "dark" ? #3d566e : #f0f0f0;
    out property <color> bg-sidebar-alt: mode == "dark" ? #465a6f : #e8e8e8;
    out property <color> bg-content: mode == "dark" ? #34495e : #ffffff;
    out property <color> bg-list: mode == "dark" ? #3d566e : #ffffff;
    out property <color> bg-tab-active: mode == "dark" ? #3d566e : #ffffff;
    out property <color> bg-tab-inactive: mode == "dark" ? #465a6f : #d0d0d0;
    out property <color> bg-selected: mode == "dark" ? #4a6fa5 : #e0e0e0;
    out property <color> bg-hover: mode == "dark" ? #465a6f : #f0f0f0;
    out property <color> bg-panel: mode == "dark" ? #3d566e : #f5f5f5;
    out property <color> bg-item: mode == "dark" ? #465a6f : #ffffff;
    out property <color> bg-item-alt: mode == "dark" ? #3d566e : #f9f9f9;
    out property <color> bg-highlight: mode == "dark" ? #4a6fa5 : #d0e0ff;
    out property <color> bg-dialog: mode == "dark" ? #34495e : #ffffff;

    // Text
    out property <color> text-primary: mode == "dark" ? #ecf0f1 : #1f2937;
    out property <color> text-secondary: mode == "dark" ? #bdc3c7 : #6b7280;
    out property <color> text-error: mode == "dark" ? #e74c3c : #cc0000;

    // Accent
    out property <color> accent: mode == "dark" ? #3498db : #2563eb;
    out property <color> accent-hover: mode == "dark" ? #5dade2 : #3b82f6;

    // Borders
    out property <color> border: mode == "dark" ? #4a5f7a : #d1d5db;
    out property <color> border-light: mode == "dark" ? #465a6f : #e5e7eb;
    out property <color> separator: mode == "dark" ? #4a5f7a : #bbbbbb;
}
