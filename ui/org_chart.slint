//! Organizational chart view component

import { VerticalBox, HorizontalBox } from "std-widgets.slint";

export struct ChartNode {
    id: int,
    name: string,
    unit-type: string,
    x: float,
    y: float,
}

export component OrgChart inherits Rectangle {
    in-out property <[ChartNode]> nodes: [];
    callback node-selected(int);

    // TODO: Implement SVG-based organizational chart rendering
