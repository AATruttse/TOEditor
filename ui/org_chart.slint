        padding: 20px;
        Text {
            text: @tr("Organizational Chart View");
            font-size: 20px;
            font-weight: 700;
        }
        Rectangle { height: 20px; }
        Text {
            text: @tr("Chart visualization will be implemented here.");
            font-size: 14px;
        }
    }
}
