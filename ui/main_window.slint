                Text { text: root.tr-language; vertical-alignment: center; }
                Button {
                    text: "EN";
                    clicked => {
                        root.switch-language("en");
                        root.switch-to-english();
                    }
                }
                Button {
                    text: "RU";
                    clicked => {
                        root.switch-language("ru");
                        root.switch-to-russian();
                    }
                }
            }
        }

        // Main content area
        HorizontalBox {
            // Sidebar
            Rectangle {
                width: 200px;
                background: #f5f5f5;
                border-width: 1px;
